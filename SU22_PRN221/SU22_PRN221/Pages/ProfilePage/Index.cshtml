@page
@using Microsoft.AspNetCore.Http
@model SU22_PRN221.Pages.ProfilePage.IndexModel
@{

}
<h1>Create new Profile for</h1>

<h4>@HttpContext.Session.GetString("username")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Address" class="control-label"></label>
                <input type="text" asp-for="Address" class="form-control" required/>
                <span asp-validation-for="User.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PhoneNumber" class="control-label"></label>
                <input type="text" asp-for="PhoneNumber" class="form-control" required/>
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}